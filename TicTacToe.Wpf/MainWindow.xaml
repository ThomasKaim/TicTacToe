<Window x:Class="TicTacToe.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="_squaresGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="0" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="1" Grid.Row="0" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="2" Grid.Row="0" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="0" Grid.Row="1" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="1" Grid.Row="1" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="2" Grid.Row="1" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="0" Grid.Row="2" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="1" Grid.Row="2" FontSize="96" Content=" " Click="Button_Click" />
        <Button Grid.Column="2" Grid.Row="2" FontSize="96" Content=" " Click="Button_Click" />
    </Grid>
</Window>
